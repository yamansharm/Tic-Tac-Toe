<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/na"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="319dp"
        android:layout_height="59dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="621dp"
        android:text="Tic Tac Toe"
        android:textColor="#140CF6"
        android:textColorHint="#673AB7"
        android:textSize="37sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/yamanTextView"
        android:layout_width="196dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="183dp"
        android:layout_marginBottom="566dp"
        android:text="by Yaman Sharma"
        android:textColor="#050505"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

    <EditText
        android:id="@+id/playerxEditText"
        android:layout_width="327dp"
        android:layout_height="58dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="109dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="399dp"
        android:ems="10"
        android:hint="Player X name"
        android:inputType="textPersonName"
        android:textColor="#050505"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yamanTextView" />

    <EditText
        android:id="@+id/playeroEditText"
        android:layout_width="325dp"
        android:layout_height="62dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="285dp"
        android:ems="10"
        android:hint="Player O name"
        android:inputType="textPersonName"
        android:textColor="#050505"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerxEditText" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="127dp"
        android:layout_height="58dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="142dp"
        android:backgroundTint="#0B0A0A"
        android:onClick="start"
        android:text="Start"
        android:textColor="#FDFCFC"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playeroEditText" />
</androidx.constraintlayout.widget.ConstraintLayout>